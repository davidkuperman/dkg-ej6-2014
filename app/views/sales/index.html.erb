<h1>Listing sales</h1>

<table>
  <thead>
    <tr>
      <th>Ammount</th>
      <th>Company</th>
      <th>Salesrep</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.ammount %></td>
        <td><%= sale.company %></td>
        <td><%= sale.salesrep.name %>  <%= sale.salesrep.lastname %></td>
        <td><%= link_to 'Show', sale %></td>
        <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
        <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

